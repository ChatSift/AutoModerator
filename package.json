{
  "$schema": "http://json.schemastore.org/package",
  "name": "automoderator",
  "version": "0.1.0",
  "description": "Something cool",
  "type": "module",
  "scripts": {
    "build": "pnpm recursive run build --filter @automoderator/*",
    "lint": "pnpm recursive run lint --filter @automoderator/*",
    "lint:ci": "pnpm lint --parallel --filter @automoderator/*",
    "test": "jest",
    "test:ci": "jest --ci --no-stack-trace --verbose",
    "migrate": "ley"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/didinele/AutoModerator.git"
  },
  "author": "didinele",
  "bugs": {
    "url": "https://github.com/didinele/AutoModerator/issues"
  },
  "homepage": "https://github.com/didinele/AutoModerator#readme",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/generator": "^7.14.8",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-jest": "^26.6.3",
    "babel-plugin-const-enum": "^1.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^7.32.0",
    "eslint-config-marine": "^7.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "ley": "^0.7.1",
    "lint-staged": "^11.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.0-insiders.20210805"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
